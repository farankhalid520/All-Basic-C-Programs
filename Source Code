                        // Function for calculator
void calculator()
{
    int a,b,e,diff,div,remain;
    char choice='y',option='y';
           // do
            //{
            system("cls");
            printf("Enter 1 to find Sum\n");
            printf("Enter 2 to find Difference of two numbers\n");
            printf("Enter 3 to find Product\n");
            printf("Enter 4 to find Division\n");
            printf("Enter 5 to find Remainder\n");
            printf("Enter 6 to find Average\n");
            scanf("%d",&e);


    if(e==1)
    {
        int n,i,j,sum=0;
        char loop_1='y';

        do                                      // nested loop for calculator
        {
            system("cls");
            printf("Enter the size of the Array:-\n");
            scanf("%d",&n);
            int num[n];
            n=n-1;
    for(i=0;i<=n;i++)
    {
        printf("Enter Element no:-%d\n",i+1);
        scanf("%d",&num[i]);
        sum=sum+num[i];
    }
    printf("Total Sum is %d\n",sum);
            printf("Enter Y to continue with sum or Enter N to Exit\n");
            fflush(stdin);scanf("%c",&choice);
        }
        while(choice=='y' || choice=='Y');
    }
    else if(e==2)
    {

        do                                   // nested loop for calculator
        {
            system("cls");
            printf("Enter 1st number\n");
            fflush(stdin);scanf("%d",&a);
            printf("Enter 2nd number\n");
            fflush(stdin);scanf("%d",&b);
            diff=a-b;
            printf("Difference is %d\n",diff);
            printf("Enter Y to continue with Difference or Enter N to Exit");
            fflush(stdin);scanf("%c",&choice);
        }
        while(choice=='y' || choice=='Y');
    }
    else if(e==3)
    {
        int n,i,j,pro=1;
        do                                  // nested loop for calculator
        {
            system("cls");
            printf("Enter the size of the Array:-\n");
            scanf("%d",&n);
            n=n-1;
            int num[n];
    for(i=0;i<=n;i++)
    {
        printf("Enter Element no:-%d\n",i+1);
        scanf("%d",&num[i]);
        pro=num[i]*pro;
    }
    printf("Total Product is %d\n",pro);
            printf("Enter Y to continue with Product or Enter N to Exit");
            fflush(stdin);scanf("%c",&choice);
        }
        while(choice=='y' || choice=='Y');
    }
    else if(e==4)
    {
        do                                // nested loop for calculator
        {
            system("cls");
            printf("Enter 1st number\n");
            fflush(stdin);scanf("%d",&a);
            printf("Enter 2nd number\n");
            fflush(stdin);scanf("%d",&b);
            float div=a/(b);
            printf("Division is %d\n",div);
            printf("Enter Y continue with Division or Enter N to Exit");
            fflush(stdin);scanf("%c",&choice);
        }
        while(choice=='y' || choice=='Y');
    }
    else if(e==5)
    {
        do                               // nested loop for calculator
        {
            system("cls");
            printf("Enter 1st number\n");
            fflush(stdin);scanf("%d",&a);
            printf("Enter 2nd number\n");
            fflush(stdin);scanf("%d",&b);
            remain=a%b;
            printf("Remainder is %d\n",remain);
            printf("Enter Y to continue with Remainder or Enter N to Exit");
            fflush(stdin);scanf("%c",&choice);
        }
        while(choice=='y' || choice=='Y');
    }
    else if(e==6)
    {
            int n,i,j=0;
            float avg;
        do                            // nested loop for calculator
    {
        system("cls");
        printf("Enter the length of Array:-\n");
        scanf("%d",&n);
        n=n-1;
        int num[n];
        for(i=0;i<=n;i++)
    {
        printf("Enter Element no:-%d\n",i+1);
        scanf("%d",&num[i]);
        j=j+num[i];
    }
    avg=j/(n+1);
    printf("Total average is %.2f\n",avg);
            printf("Enter Y to continue with Average or Enter N to Exit");
            fflush(stdin);scanf("%c",&choice);
    }while(choice=='y' || choice=='Y');
    }
    else
    {
        system("cls");
